<!DOCTYPE html>
<html lang="vi">
<head>
  <%- include('partials/head') %>
  <title>Xuất kho</title>
  <style>
    .form-label {
      font-weight: 500;
    }
    .card {
      border-radius: 10px;
    }
    .btn-danger:hover {
      background-color: #bb2d3b;
      transform: translateY(-1px);
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    .form-control:focus, .form-select:focus {
      border-color: #dc3545;
      box-shadow: 0 0 0 0.25rem rgba(220,53,69,.25);
    }
  </style>
</head>
<body>
  <%- include('partials/header') %>

  <div class="container py-4">
    <div class="card shadow">
      <div class="card-header bg-danger text-white">
        <h4><i class="fas fa-arrow-up me-2"></i>Xuất kho</h4>
      </div>

      <div class="card-body">
        <form action="/inventory/action" method="POST" id="exportForm">
          <input type="hidden" name="action" value="export">
          
          <div class="row mb-3">
            <div class="col-md-6 mb-3 mb-md-0">
              <label class="form-label">Sản phẩm</label>
              <select name="productId" class="form-select" id="productSelect" required>
                <% products.forEach(product => { %>
                  <option value="<%= product._id %>" 
                    data-quantity="<%= product.quantity %>">
                    <%= product.name %> (Hiện có: <%= product.quantity %>)
                  </option>
                <% }); %>
              </select>
            </div>
            <div class="col-md-6">
              <label class="form-label">Số lượng</label>
              <input type="number" name="quantity" class="form-control" id="quantityInput" min="1" required>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-6 mb-3 mb-md-0">
              <label class="form-label">Ngày xuất</label>
              <input type="date" name="date" class="form-control">
            </div>
            <div class="col-md-6">
              <label class="form-label">Ghi chú</label>
              <input type="text" name="note" class="form-control">
            </div>
          </div>

          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <button type="submit" class="btn btn-danger px-4 py-2">
              <i class="fas fa-save me-2"></i>Lưu
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script>
    document.getElementById('exportForm').addEventListener('submit', function(e) {
      const productSelect = document.getElementById('productSelect');
      const selectedOption = productSelect.options[productSelect.selectedIndex];
      const maxQuantity = parseInt(selectedOption.getAttribute('data-quantity'));
      const inputQuantity = parseInt(document.getElementById('quantityInput').value);
      
      if (inputQuantity > maxQuantity) {
        e.preventDefault();
        alert(`Số lượng xuất không được vượt quá ${maxQuantity}`);
      }
    });
  </script>
</body>
</html>
