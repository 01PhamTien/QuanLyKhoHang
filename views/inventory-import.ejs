<!DOCTYPE html>
<html lang="vi">
<head>
  <%- include('partials/head') %>
  <title>Nhập kho</title>
  <link rel="stylesheet" href="/stylesheets/inventory-import.css">
</head>
<body  style="padding-top: 10%;" >
  <%- include('partials/header') %>

  <div class="container py-4">
    <div class="card shadow-lg">
      <div class="card-header">
        <h4 class="text-white"><i class="fas fa-arrow-down me-2"></i>Nhập kho</h4>
      </div>

      <div class="card-body">
        <form action="/inventory/action" method="POST">
          <input type="hidden" name="action" value="import">
          
          <div class="row mb-3">
            <div class="col-md-6 mb-3 mb-md-0">
              <label class="form-label"><i class="fas fa-box-open me-2"></i>Sản phẩm</label>
              <select name="productId" class="form-select" required>
                <% products.forEach(product => { %>
                  <option value="<%= product._id %>"><%= product.name %> - <%= product.type %> (Số lượng: <%= product.quantity %>)</option>
                <% }) %>
              </select>
            </div>
            <div class="col-md-6">
              <label class="form-label"><i class="fas fa-sort-numeric-up me-2"></i>Số lượng</label>
              <input type="number" name="quantity" class="form-control" min="1" required>
            </div>
          </div>

          <div class="mb-3">
            <label class="form-label"><i class="fas fa-sticky-note me-2"></i>Ghi chú</label>
            <textarea name="note" class="form-control" rows="3" placeholder="Nhập ghi chú (nếu có)"></textarea>
          </div>

          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <button type="submit" class="btn btn-primary px-4 py-2">
              <i class="fas fa-save me-2"></i>Lưu
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>

</body>
</html>