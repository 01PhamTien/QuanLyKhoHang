<h2>Lịch Sử Tồn Kho</h2>
<table class="table">
  <thead>
    <tr>
      <th>Ngày</th>
      <th>Sản phẩm</th>
      <th>Hành động</th>
      <th>Số lượng</th>
      <th>Ghi chú</th>
    </tr>
  </thead>
  <tbody>
    <% histories.forEach(item => { %>
      <tr>
        <td><%= item.date.toLocaleString() %></td>
        <td><%= item.productId.name %> (<%= item.productId.sku %>)</td>
        <td><%= item.action === 'import' ? 'Nhập kho' : 'Xuất kho' %></td>
        <td><%= item.quantity %></td>
        <td><%= item.note || 'Không có ghi chú' %></td>
      </tr>
    <% }); %>
  </tbody>
</table>
<a href="<%= backUrl %>" class="btn btn-primary">Quay lại</a>
