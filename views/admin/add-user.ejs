<%- include('../partials/head') %>
<%- include('../partials/header') %>
<link rel="stylesheet" href="/stylesheets/add-user.css">

<div class="form-container">
  <div class="card form-card">
    <div class="card-header">
      <div class="d-flex justify-content-between align-items-center">
        <h3 class="mb-0">
          <i class="fas fa-user-plus me-2"></i>Thêm người dùng mới
        </h3>
        <a href="/admin/users" class="btn btn-secondary">
          <i class="fas fa-arrow-left me-1"></i>Quay lại
        </a>
      </div>
    </div>

    <div class="card-body p-4">
      <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>
      
      <form action="/admin/users/add" method="POST">
        <div class="mb-3">
          <label for="username" class="form-label required-field">Tên đăng nhập</label>
          <input type="text" class="form-control" id="username" name="username" required value="<%= formData ? formData.username : '' %>">
        </div>
        <div class="mb-3">
          <label for="email" class="form-label required-field">Email</label>
          <input type="email" class="form-control" id="email" name="email" required value="<%= formData ? formData.email : '' %>">
        </div>
        <div class="mb-3">
          <label for="password" class="form-label required-field">Mật khẩu</label>
          <input type="password" class="form-control" id="password" name="password" required minlength="6">
        </div>
        <div class="mb-3">
          <label for="role" class="form-label required-field">Vai trò</label>
          <select class="form-select" id="role" name="role" required>
            <option value="user" <%= formData && formData.role === 'user' ? 'selected' : '' %>>Người dùng</option>
            <option value="warehouse_manager" <%= formData && formData.role === 'warehouse_manager' ? 'selected' : '' %>>Quản lý kho</option>
            <option value="manager" <%= formData && formData.role === 'manager' ? 'selected' : '' %>>Quản lý</option>
            <option value="admin" <%= formData && formData.role === 'admin' ? 'selected' : '' %>>Quản trị viên</option>
          </select>
        </div>
        <div class="d-flex gap-2 justify-content-center mt-4">
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-save me-2"></i>Thêm người dùng
          </button>
          <a href="/admin/users" class="btn btn-secondary">Hủy</a>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>