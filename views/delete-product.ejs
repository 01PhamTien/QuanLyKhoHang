<div class="container py-4">
  <div class="card border-0 shadow-lg form-card">
    <div class="card-header bg-danger text-white">
      <div class="d-flex justify-content-between align-items-center">
        <h3 class="mb-0">
          <i class="fas fa-trash-alt me-2"></i>Xóa sản phẩm
        </h3>
        <a href="/products" class="btn btn-light btn-sm">
          <i class="fas fa-arrow-left me-1"></i> Quay lại
        </a>
      </div>
    </div>
    
    <div class="card-body p-4">
      <form action="/delete-product" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
          <label class="form-label">ID Sản phẩm <span class="text-danger">*</span></label>
          <input type="text" class="form-control" name="id" required>
          <div class="invalid-feedback">Vui lòng nhập ID sản phẩm</div>
        </div>

        <div class="d-flex justify-content-end mt-4">
          <button type="submit" class="btn btn-danger px-4 py-2">
            <i class="fas fa-trash-alt me-2"></i>Xóa sản phẩm
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
